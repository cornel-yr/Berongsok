<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.register.RegisterActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/md_theme_primary"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_italic"
        android:textColor="@color/md_theme_primary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:text="@string/slogan"/>

    <FrameLayout
        android:id="@+id/ll1"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/md_theme_surfaceContainerHighest"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            app:cornerRadius="5dp">

            <EditText
                android:textColor="@color/md_theme_primary"
                android:textColorHint="@color/md_theme_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="username"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/username"
                android:inputType="text" />

            <EditText
                android:textColor="@color/md_theme_primary"
                android:textColorHint="@color/md_theme_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="emailAddress"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="emailAddress"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/md_theme_primary"
                android:textColorHint="@color/md_theme_primary"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="emailAddress"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/md_theme_primary"
                android:textColorHint="@color/md_theme_primary"
                android:hint="@string/confirm_password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cornerRadius="5dp"
                android:text="@string/sign_up" />


        </LinearLayout>

        <TextView
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/md_theme_primary"
            android:textSize="36sp"
            android:text="@string/sign_up"/>

    </FrameLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/md_theme_primary"
        android:textSize="16sp"
        android:layout_marginVertical="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        android:textAlignment="center"
        android:text="@string/or"/>

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/googlesignin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_primary"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:backgroundTint="@color/md_theme_background"
        android:drawableLeft="@drawable/ic_google"
        android:text="@string/signup_with_google"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:iconPadding="0dp"
        app:strokeColor="@color/md_theme_primary"
        app:strokeWidth="1dp"
        />

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googlesignin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginVertical="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/already_have_an_account"
            android:textColor="@color/md_theme_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="@color/md_theme_primary"
            android:textSize="14sp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>